<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Background color -->
            <corners android:radius="16dp" /> <!-- Adjust corner radius as needed -->
        </shape>
    </item>
    <!-- Shadow -->
    <item android:top="2dp" android:right="2dp" android:left="2dp"> <!-- Adjust shadow position -->
        <shape>
            <corners android:radius="16dp" /> <!-- Adjust corner radius to match the background -->
            <solid android:color="@android:color/black" /> <!-- Shadow color -->
        </shape>
    </item>
</layer-list>
